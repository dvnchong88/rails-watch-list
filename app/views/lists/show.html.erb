
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <div class="container">
    <h1><strong><%= @list.name %> List</strong></h1>
    <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-primary"  %>
    <%= link_to "Home", root_path, class: "m-3 btn btn-primary"  %>
  </div>
</div>
<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-product">
    <%= image_tag "#{bookmark.movie.poster_url}" %>
    <div class="card-product-infos">
      <h3><%= bookmark.movie.title %></h3>
      <p><%= bookmark.movie.overview  %></p>
      <p><strong>"<%= bookmark.comment %>"</strong></p>
    </div>
    <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete #{bookmark.movie.title}?" }  %>
  </div>
  <% end %>
</div>
