  <div class="container">
    <h1 class="mt-3"><%= @list.name %> List</h1>
    <div class="cards">
      <div class="card-trip">
        <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" /> %>
        <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-trip-infos">
          <div>
            <h2><%= @list.name %></h2>
          </div>
          <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-primary"  %>
        </div>
      </div>
    </div>
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product">
        <%= image_tag "#{bookmark.movie.poster_url}" %>
        <div class="card-product-infos">
          <h3><%= bookmark.movie.title %></h3>
          <p><%= bookmark.movie.overview  %></p>
          <p><strong>"<%= bookmark.comment %>"</strong></p>
          <%= link_to "X", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to delete #{bookmark.movie.title}?" }  %>
        </div>
      </div>
    <% end %>
  </div>
    <%= link_to "Home", root_path, class: "m-3 btn btn-primary"  %>
