<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://c.tenor.com/uyqwUbSR-cEAAAAC/the-matrix-has-you-the-matrix.gif')">
  <div class="container">
    <h1><strong>Devin's Website for Lists of Movies Lists that List Movies</strong></h1>
    <%= link_to "Add List", new_list_path, class: "mt-3 btn btn-primary" %>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
        <%= list.name %> List
        <%= link_to "Open", list_path(list.id), class: "btn btn-primary" %>
        <%= link_to "X", list_path(list), method: :delete, data: { confirm: "Are you sure you want to delete #{list.name}?" }%>
      </div>
    <% end %>
  </div>
</div>
